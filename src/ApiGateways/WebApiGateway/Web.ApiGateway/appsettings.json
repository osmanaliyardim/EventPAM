{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/identity-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "ticketing-route": {
        "ClusterId": "ticketing-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/ticketing-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "customer-route": {
        "ClusterId": "customer-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/customer-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "event-route": {
        "ClusterId": "event-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/event-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "event-manager-route": {
        "ClusterId": "event-manager-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/event-manager-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "offer-route": {
        "ClusterId": "offer-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/offer-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      },
      "venue-route": {
        "ClusterId": "venue-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/venue-service/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-destination": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "ticketing-cluster": {
        "Destinations": {
          "ticketing-destination": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "customer-cluster": {
        "Destinations": {
          "customer-destination": {
            "Address": "http://localhost:5003/"
          }
        }
      },
      "event-cluster": {
        "Destinations": {
          "event-destination": {
            "Address": "http://localhost:5004/"
          }
        }
      },
      "event-manager-cluster": {
        "Destinations": {
          "event-manager-destination": {
            "Address": "http://localhost:5005/"
          }
        }
      },
      "offer-cluster": {
        "Destinations": {
          "offer-destination": {
            "Address": "http://localhost:5006/"
          }
        }
      },
      "venue-cluster": {
        "Destinations": {
          "offer-destination": {
            "Address": "http://localhost:5007/"
          }
        }
      }
    }
  }
}
